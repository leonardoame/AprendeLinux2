<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/trans_negro" />
            <gradient android:angle="-90" android:startColor="@color/rojo" android:endColor="@color/trans_negro"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="2dip" android:color="@color/negro" />
            <solid android:color="@color/negro"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/trans_negro" />
            <gradient android:angle="-90" android:startColor="@color/trans_rojo" android:endColor="@color/trans_negro" />
        </shape>
    </item>
</selector>