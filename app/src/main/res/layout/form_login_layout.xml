<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="5pt"
    android:paddingRight="5pt"
    android:paddingTop="5pt"
    android:paddingBottom="10pt"
    android:layout_margin="5pt"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_login"
        android:textColor="@color/rojo"
        android:textSize="15pt"
        android:gravity="center"
        android:id="@+id/title_login"
        />
    <TextView
        android:id="@+id/txv_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:textColor="@color/negro"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_gravity="center"
        android:text="@string/usuario_create_login_registro"
        android:layout_below="@id/title_login"
        />
    <AutoCompleteTextView
        android:id="@+id/edt_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txv_user"
        android:maxLength="10"
        />
    <TextView
        android:id="@+id/txv_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:textColor="@color/negro"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_gravity="center"
        android:text="@string/pass_create_login_registro"
        android:layout_below="@id/edt_user"
        />
    <EditText
        android:id="@+id/edt_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txv_pass"
        android:password="true"
        android:maxLength="10"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:id="@+id/btn_ingresar"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="@string/form_btn_ingresar"
        android:layout_below="@id/edt_pass"
        android:background="@drawable/mi_boton"
        />

</RelativeLayout>