<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:scrollbarThumbVertical="@drawable/mi_scroll"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="5pt"
        android:paddingRight="5pt"
        android:paddingTop="5pt"
        android:paddingBottom="10pt"
        android:layout_margin="5pt"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_create_login_registro"
            android:textColor="@color/rojo"
            android:textSize="15pt"
            android:gravity="center"
            android:id="@+id/title_login"
            />
        <TextView
            android:id="@+id/txv_create_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:textColor="@color/negro"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center"
            android:text="@string/usuario_create_login_registro"
            android:layout_below="@id/title_login"
            />
        <EditText
            android:id="@+id/edt_create_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txv_create_user"
            android:maxLength="10"
            />
        <TextView
            android:id="@+id/txv_create_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:textColor="@color/negro"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center"
            android:text="@string/pass_create_login_registro"
            android:layout_below="@id/edt_create_user"
            />
        <EditText
            android:id="@+id/edt_create_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txv_create_pass"
            android:password="true"
            android:maxLength="10"
            />
        <TextView
            android:id="@+id/txv_create_pass_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:textColor="@color/negro"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center"
            android:text="@string/confirm_pass_create_login_registro"
            android:layout_below="@id/edt_create_pass"
            />
        <EditText
            android:id="@+id/edt_create_pass_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txv_create_pass_confirm"
            android:password="true"
            android:maxLength="10"
            />
        <TextView
            android:id="@+id/txv_create_correo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:textColor="@color/negro"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center"
            android:text="@string/correo_create_login_registro"
            android:layout_below="@id/edt_create_pass_confirm"
            />
        <EditText
            android:id="@+id/edt_create_correo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txv_create_correo"
            android:layout_marginBottom="10dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_below="@id/edt_create_correo"
            android:layout_centerHorizontal="true"
            >
            <Button
                android:id="@+id/btn_create_login_guardar"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/mi_boton"
                android:text="@string/btn_create_guardar"
                />
            <Button
                android:id="@+id/btn_mas_tarde_create_login"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/mi_boton"
                android:text="@string/form_btn_mas_tarde"
                />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>